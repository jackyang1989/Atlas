# ==================== 数据库配置 ====================
# PostgreSQL 数据库密码
DB_PASSWORD=your-strong-password-here

# ==================== Redis 配置 ====================
# Redis 密码
REDIS_PASSWORD=your-redis-password-here

# ==================== API 配置 ====================
# JWT 密钥（必须修改）
SECRET_KEY=your-very-long-and-strong-secret-key-that-is-at-least-32-characters

# 前端 API URL
VITE_API_URL=http://yourdomain.com

# ==================== 系统路径 ====================
# 证书目录
CERTS_DIR=/opt/atlas/certs

# 备份目录
BACKUPS_DIR=/opt/atlas/backups

# 日志目录
LOGS_DIR=/opt/atlas/logs

# ==================== Sing-box 配置 ====================
# Sing-box 配置文件路径
SING_BOX_CONFIG_PATH=/etc/sing-box/config.json

# ==================== SMTP 邮件配置 ====================
# SMTP 服务器
SMTP_SERVER=smtp.gmail.com

# SMTP 端口
SMTP_PORT=587

# SMTP 用户名
SMTP_USER=your-email@gmail.com

# SMTP 密码
SMTP_PASSWORD=your-app-password

# ==================== SSL/TLS 配置 ====================
# SSL 证书路径
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem

# SSL 密钥路径
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==================== 安全配置 ====================
# CORS 允许的源
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==================== 备份配置 ====================
# 自动备份间隔（小时）
BACKUP_INTERVAL=24

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# ==================== 监控告警配置 ====================
# CPU 使用率告警阈值（百分比）
CPU_WARNING_THRESHOLD=80

# 内存使用率告警阈值（百分比）
MEMORY_WARNING_THRESHOLD=80

# 磁盘使用率告警阈值（百分比）
DISK_WARNING_THRESHOLD=80

# ==================== 高级配置 ====================
# 工作进程数
WORKERS=4

# 连接池大小
DB_POOL_SIZE=20

# 连接池最大超限
DB_POOL_MAX_OVERFLOW=10

# ==================== 特性开关 ====================
# 启用 API 文档
ENABLE_DOCS=false

# 启用 HTTPS 重定向
ENABLE_HTTPS_REDIRECT=true

# 启用速率限制
ENABLE_RATE_LIMITING=true
